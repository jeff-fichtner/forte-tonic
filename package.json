{
  "name": "tonic",
  "version": "1.0.0",
  "description": "Student registration automation for after school lessons and programs",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node start.js",
    "start:direct": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node tests/scripts/test.js all",
    "test:watch": "node tests/scripts/test.js watch",
    "test:coverage": "node tests/scripts/test.js coverage",
    "test:unit": "node tests/scripts/test.js unit",
    "test:integration": "node tests/scripts/test.js integration",
    "test:debug": "node tests/scripts/test.js debug",
    "format": "prettier --config config/.prettierrc.json --ignore-path config/.prettierignore --write \"src/**/*.js\" \"tests/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
    "format:check": "prettier --config config/.prettierrc.json --ignore-path config/.prettierignore --check \"src/**/*.js\" \"tests/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
    "lint": "eslint --config config/eslint.config.js src/ tests/ --ext .js",
    "lint:fix": "eslint --config config/eslint.config.js src/ tests/ --ext .js --fix",
    "docs": "documentation build src/**/*.js -f html -o docs/generated --config config/documentation.yml",
    "docs:serve": "documentation serve src/**/*.js --watch",
    "format:all": "npm run format && npm run lint:fix",
    "check:all": "npm run format:check && npm run lint && npm test",
    "build": "npm run check:all",
    "build:production": "echo 'Production build - skipping quality checks'",
    "build:staging": "echo 'Staging build - skipping quality checks'",
    "deploy:check": "npm run build && npm run test",
    "postinstall": "echo 'Install complete - ready to start'",
    "health": "curl -f http://localhost:${PORT:-3000}/api/health || exit 1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.2.0",
    "googleapis": "^126.0.1",
    "helmet": "^7.0.0",
    "lodash": "^4.17.21",
    "nodemailer": "^7.0.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.32.0",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "documentation": "^14.0.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^52.0.2",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "education",
    "registration",
    "google-sheets",
    "node.js"
  ],
  "author": "",
  "license": "MIT"
}
